<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jp.login.mapper.ContentItemMapper">

    <!-- ContentItemエンティティとDBカラムの対応をマップ -->
    <resultMap id="ContentItemResultMap" type="com.jp.login.entity.ContentItem">
        <id property="id" column="id"/>
        <result property="itemName" column="item_name" typeHandler="com.jp.login.config.ContentItemListTypeHandler"/>
    </resultMap>

    <select id="findAll" resultMap="ContentItemResultMap">
        SELECT
            id
            , item_name
        FROM
            content_items
    </select>

</mapper>
